# Exclude canvas from production builds
optional=false
# Skip optional dependencies that might require native compilation
ignore-scripts=true
# Never install optional dependencies
no-optional=true
# Skip platform specific dependencies that might fail
target_platform=linux
target_arch=x64
target_libc=unknown
# Ensure canvas is not installed in production
# Set npm to use ci mode in production environments
prefer-offline=true
# Exclude dev dependencies from production
# Skip build scripts for native modules
unsafe-perm=true