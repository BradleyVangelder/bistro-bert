{
  "version": 2,
  "name": "bistro-bert",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["bru1"],
  "env": {
    "NEXT_PUBLIC_ENV": "production",
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_ENV": "production",
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  "functions": {
    "app/**/*.tsx": {
      "runtime": "nodejs18.x"
    }
  },
  "git": {
    "deploymentEnabled": {
      "master": true,
      "staging": true
    }
  }
}